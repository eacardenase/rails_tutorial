<section class="flex flex-col m-20 px-10 border border-gray-200 items-center justify-center rounded-lg">
  <h1 class="main-title"><%= title %></h1>

  <div class="w-full max-w-lg mb-10">
    <%= form_with(model: category) do |form| %>
      <% if category.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
            <% category.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, style: "display: block", class: "label-form" %>
        <%= form.text_field :name, class: "field-form" %>
      </div>

      <div class="mt-05 flex items-center justify-center">
        <%= form.submit class: "btn-primary bg-green-600 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</section>
