<h1>Show Article</h1>

<div>
  <h3>
    <%= @article.name %>
  </h3>

  <div>
    <%= @article.description %>
  </div>

  <div>
    <%= image_tag(@article.avatar, width: "750") if @article.avatar.attached? %>
  </div>

  <div>
    <%= @article.body %>
  </div>

  <div>
    <%= link_to "Edit article", article_edit_path(@article) %>
    <%= button_to "Delete article", article_destroy_path(@article), method: :delete%>
  </div>
</div>