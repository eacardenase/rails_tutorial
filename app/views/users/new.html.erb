<h1>Sign up</h1>

<div>
  <%= form_with(scope: :session, url: new_user_registration_path) do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div>
      <%= form.submit "Sign Up" %>
    </div>
  <% end %>
</div>